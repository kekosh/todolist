<h1>Categories#edit</h1>

<%= form_with(model: @category) do |f| %>
  <%= render "shared/flash_messages", flash: flash %>
  <%= render "shared/error_messages", object: f.object %>
  <div>
    <%= f.label :name %> : 
    <%= f.text_field :name, autofocus:true, autocomplete: false %>
  </div>
  <div>
    <%= f.label :description %> : 
    <%= f.text_field :description, autofocus:true, autocomplete: false %>
  </div>

  <hr>
  <h2>Todo</h2>
  <%= f.fields_for :todos do |todo| %>
    <p><%= field_index_number(todo.index) %></p>
    <div>
      <%= todo.label :name %>
      <%= todo.text_field :name, autofocus: true, autocomplete: true %>
    </div>
    <div>
      <%= todo.label :description %>
      <%= todo.text_field :description, autofocus: true, autocomplete: true %>
    </div>
  <% end%>
  <%= f.submit %>
<% end %>

<%= link_to "back", category_path(params[:id]) %>

