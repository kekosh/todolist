<% provide(:title, "Category and Todo") %>
<h1>Categories list</h1>
<div><%= render "shared/flash_messages", flash %></div>
<%= link_to  "Create New Category", new_category_path %>
<hr>
<table>
  <tr>
    <th>Category</th>
    <th>todo</th>
  </tr>
  <% @categories.each do |category| %>
    <tr>
      <td><%= link_to category.name, category_path(category.id) %></td>
      <% category.todos.each do |todo| %>
      <tr><td></td><td><%= todo.name %></td></tr>
      <% end %>
    </tr>
  <% end %>
</table>
